
/*CRIA POLICY*/
PUT _ilm/policy/delete-logs-after-30d
{
  "policy": {
    "phases": {
      "delete": {
        "min_age": "30d",
        "actions": {
          "delete": {}
        }
      },
      "hot": {
        "actions": {
          "min_age": "0ms",
          "rollover": {
            "max_age": "30d",
            "max_size": "1gb"
          },
          "set_priority": {
            "priority": 100
          }
        }
      }
    }
  }
}

/*CRIAR TEMPLATE*/
PUT _index_template/log-tegma-cisa-carimba-pdf
{
  "template": {
    "settings": {
      "index": {
        "lifecycle": {
          "name": "delete-logs-after-30d",
          "rollover_alias": "tegma-cisa-carimba-pdf-delete",
          "indexing_complete": "true"
        }
      }
    },
    "aliases": {
      "tegma-cisa-carimba-pdf-delete": {}
    }
  },
  "index_patterns": [
    "tegma-cisa-carimba-pdf-*"
  ],
  "composed_of": []
}


/*APLICA A POLICY DE EXCLUS√ÉO PARA OS INDICES DESEJADOS*/
PUT freightverifygm-service-2021*/_settings 
{
    "index": {
        "lifecycle": {
            "name": "logs-freightverifygm",
            "indexing_complete": true,
            "rollover_alias": "freightverifygm2020"
        }
    }
} 
